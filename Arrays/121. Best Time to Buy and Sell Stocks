--------------------optimized solution---------------
class Solution:
    def maxProfit(self, prices: List[int]) -> int:
        maxProfit = 0
        minPrice = float('inf')
        
        for price in prices:
            if price < minPrice:
                minPrice = price
            # if we sell at the min price i.e we sell on the same day
            profit = price - minPrice # Profit == 0
            # check if given profit is greater
            if profit > maxProfit:
                maxProfit = profit
            
        return maxProfit

-----------------Nc sol---------------------

class Solution:
    def maxProfit(self, prices: List[int]) -> int:
        l, r = 0, 1
        maxP = 0

        while r < len(prices):
            if prices[l] < prices[r]:
                profit = prices[r] - prices[l]
                maxP = max(maxP, profit)
            
            else:
                l = r
            r += 1

        return maxP
